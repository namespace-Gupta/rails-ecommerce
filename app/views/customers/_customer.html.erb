<div class="customer column is-3 is-one-quarter ">
    <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
           <%= image_tag customer.image %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">

            <div class="media-content">
              <p class="title is-4"><%= customer.first_name %> <%= customer.last_name %></p>
              <p class="subtitle is-6"><%= customer.phone_number %></p>

              <p class="subtitle is-6"><%= customer.email %></p>
            </div>
          </div>

          <div class="content">
            <p> <%= customer.notes %></p>
          </div>
        </div>
      </div>
</div>